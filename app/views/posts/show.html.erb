<div class='page-header'>
  <h1>
    <%= t('Post Info') %>
    <div class='pull-right'>
      <%= link_to edit_post_path(@post), class: 'btn btn-info' do %>
        <i class='glyphicon glyphicon-pencil'></i> <%= t('Edit') %>
      <% end %>
      <%= link_to posts_path, class: 'btn btn-warning' do %>
        <i class='glyphicon glyphicon-backward'></i> <%= t('Back') %>
      <% end %>
    </div>
  </h1>
</div>

<div class='panel panel-default'>
  <div class='panel-body'>
    <p>
      <strong>Name</strong>
      <%= @post.name %>
    </p>
    <p>
      <strong>Birtday</strong>
      <%= @post.birtday %>
    </p>
  </div>
</div>
